<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.ghtw.terminverwaltung_app.MeetingActivity"
    android:background="@color/Grau">

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_meeting_activity"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lvMeetings"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.048" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbMenu"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteY="-14dp"
        android:layout_marginRight="-18dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:id="@+id/lvMeetings"
        android:layout_width="395dp"
        android:layout_height="240dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/tbMenu"
        tools:layout_editor_absoluteX="-5dp"
        />
</android.support.constraint.ConstraintLayout>
